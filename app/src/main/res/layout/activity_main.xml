<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/activateOnStartupCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:checked="true"
                android:text="Activate on startup" />

            <CheckBox
                android:id="@+id/turnOn3GCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/activateOnStartupCheckBox"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/activateOnStartupCheckBox"
                android:layout_below="@+id/activateOnStartupCheckBox"
                android:checked="false"
                android:text="Turn on Mobile Data" />

            <CheckBox
                android:id="@+id/turnOnWifiCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/turnOn3GCheckBox"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/turnOn3GCheckBox"
                android:layout_below="@+id/turnOn3GCheckBox"
                android:checked="false"
                android:text="Turn on WIFI Tethering" />

            <CheckBox
                android:id="@+id/schedulerCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/turnOnWifiCheckBox"
                android:checked="false"
                android:text="Scheduler" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Switch OFF:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/switchOffTime"
                    android:layout_width="131dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView3"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="time"
                    android:text="0:00" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/switchOnTime"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/switchOnTime"
                    android:text="Switch ON:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/switchOnTime"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="time"
                    android:text="6:00" />
            </RelativeLayout>

            <CheckBox
                android:id="@+id/onlyOnPhoneNumberCheckBox"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Activate on this SIM Card" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
